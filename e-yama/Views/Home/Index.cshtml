    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="hot-deal">
                    <ul class="hot-deal-countdown">
                        <li>
                            <div>
                                <h3>02</h3>
                                <span>GÜN</span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>10</h3>
                                <span>SAAT</span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>34</h3>
                                <span>DAKİKA</span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>60</h3>
                                <span>SANİYE</span>
                            </div>
                        </li>
                    </ul>
                    <h2 class="text-uppercase">KÜÇÜK DOKUNUŞLAR, BÜYÜK DEĞİŞİMLER</h2>
                    <p>%40'A VARAN İNDİRİMLER</p>
                    <a class="primary-btn cta-btn" href="#">ŞİMDİ SATIN AL</a>
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
